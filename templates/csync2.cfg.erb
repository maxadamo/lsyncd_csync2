lock-timeout 60;

group <%= @sync_group %> {
<% @nodes_hostname.each do |this_node| -%>
    host <%= this_node.gsub(/\.(.*)/,'') %>;
<% end -%>
    key /etc/csync2_<%= @sync_group %>-group.key;

<% @sync_dir.each do |include_dir| -%>
    include <%= include_dir %>;
<% end -%>

<% @sync_exclude.each do |exclude_dir| -%>
    include <%= exclude_dir %>;
<% end -%>

    backup-directory /var/log/csync2/sync-conflicts/;
    backup-generations 2;
    auto first;
}
