lock-timeout 60;

group <%= @csync_group %> {
<% @nodes_hosts.each do |this_node| -%>
    host <%= this_node.gsub(/\.(.*)/,'') %>;
<% end -%>
    key /etc/csync2_<%= @csync_group %>-group.key;
<% @csync_dir.each do |include_dir| -%>
    include <%= include_dir %>;
<% end -%>

    exclude *~ .*;
    exclude *.log;
    exclude *.pid;

    backup-directory /var/log/csync2/sync-conflicts/;
    backup-generations 2;
    auto first;
}
